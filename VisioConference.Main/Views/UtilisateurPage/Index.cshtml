@model VisioConference.Main.Data.ColleguesSalonsInvitesViewModel

@{
	ViewData["Title"] = "UtilisateurPage";
}

<h2>Bienvenu @ViewData["name"]</h2>

<h4>Collègues</h4>
<p>
	<a asp-action="AjouterCollegue">Ajouter un collègue</a>
</p>
<table class="table">
	<thread>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Utilisateurs.First().Nom)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Utilisateurs.First().Prenom)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Utilisateurs.First().Email)
			</th>
			<th></th>
		</tr>
	</thread>
	<tbody>
		@foreach (var item in Model.Utilisateurs) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nom)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Prenom)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td>
					<a asp-action="Suprimer" asp-route-id="@item.Id">Supprimer</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<h4>Salons Créé</h4>
<p>
	<a asp-action="CreerSalon">Créer un salon</a>
</p>
<table class="table">
	<thread>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Salons.First().Id)
			</th>
			<th>
				
			</th>
			<th></th>
		</tr>
	</thread>
	<tbody>
		@foreach (var item in Model.Salons)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					
				</td>
				<td>
					<a asp-action="Ajouter" asp-route-id="@item.Id">Ajouter</a>
					<a asp-action="SupprimerSalon" asp-route-id="@item.Id">Supprimer</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<h4>Salons Invitée</h4>
<table class="table">
	<thread>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Invitee.First().Id)
			</th>
			<th>
				
			</th>
			<th></th>
		</tr>
	</thread>
	<tbody>
		@foreach (var item in Model.Invitee)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					
				</td>
				<td>
					<a asp-action="Quiter" asp-route-id="@item.Id">Quiter Salon</a>
				</td>
			</tr>
		}
	</tbody>
</table>